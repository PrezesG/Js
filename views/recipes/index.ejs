<!DOCTYPE html>
<html>
<head>
    <title>All Recipes</title>
    <style>
    body {
        background-image: url('/images/recipes.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        color: #FFFFFF;
        text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
    }
    h1, h2 {
        text-align: center;
    }
    .recipe-box {
        background-color: transparent;
        border: 3px solid #000;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        width: 60%; /* Adjust this value to change the width of the box */
        margin: 20px auto; /* Centers the box */
    }
    .recipe-box a, .recipe-box button {
        background-color: #f44336;
        color: white;
        margin-right: 10px;
        text-decoration: none;
        display: inline-block;
        width: 80px;
        height: 40px;
        text-align: center;
        line-height: 40px;
        border: none;
    }
    .recipe-box button {
        border: none;
    }
    </style>
</head>
<body>
    <%- include('../layout', { user: user }) %>
    <h1>Create your own recipes!</h1>
    <% if (user) { %>
        <h2>Welcome, <%= user.username %>!</h2>
    <% } %>
    <h1>All Recipes</h1>
<ul>
<% recipes.forEach(recipe => { %>
    <div class="recipe-box">
        <h2><%= recipe.title %></h2>
        <div>
            <a href="/recipes/<%= recipe._id %>">Show</a>
            <% if (user) { %>
                <a href="/recipes/<%= recipe._id %>/edit">Edit</a>
    <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST" style="display: inline-block;">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" style="background-color: #f44336; color: white;">Delete</button>
    </form>
            <% } %>
        </div>
    </div>
<% }); %>
</ul>
</body>
</html>


